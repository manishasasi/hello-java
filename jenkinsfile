pipeline {
    agent any

    tools {
        maven "maven3"
    }
        stages {
                stage('Clean Workspace') {
                    steps {
                        echo "Cleaning workspace..."
                        cleanWs()
                    }
                }
                stage('Git Checkout') {
                    steps {
                        dir("${WORKSPACE}") {
                            git branch: 'main',
                                url: 'https://github.com/manishasasi/hello-java.git',
                                credentialsId: 'git'
                        }
                        sh 'git checkout -B main origin/main'
                    }
                }
            }
post {
        success {
            echo 'Build completed successfully!'
        }
        failure {
            echo 'Build failed. Check logs.'
        }
    }
}
